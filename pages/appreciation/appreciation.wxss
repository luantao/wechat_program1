.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding: 20px;
}
button {

}
.history {
  display: flex;
  flex-direction: column;
}
.image-display {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.circle-image {
  max-width: 50%;
  max-height: 50%;
  border-radius: 50%;
  border: 2rpx solid #ccc;
  box-shadow: 0 0 100rpx rgba(144, 238, 144, 0.5);
  display: block;
  margin: 0 auto;
}
image {
  margin-bottom: 10rpx;
}
text {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.header {
  margin-bottom: 20px;
}
.upload-button {
  margin-bottom: 20px;
  padding: 10px 20px;
  background-color: #4CAF50;
  color: white;
  border: none;
  border-radius: 5px;
}
.input-group {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
  justify-content: space-between;
  width: 100%;
  max-width: 300px;
}
.price-input {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px;
  margin-right: 10px;
  height: 40px;
  flex-grow: 1;
}
.submit-button {
  padding: 5px 10px;
  background-color: #008CBA;
  color: white;
  border: none;
  border-radius: 5px;
}

.image-grid {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
}

.image-item {
  width: calc(33.33% - 24rpx);
  height: 0;
  padding-bottom: calc(33.33% - 24rpx);
  margin: 12rpx;
  position: relative;
  background-color: #f5f5f5;
  border-radius: 8rpx;
}

.image-item image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}

.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  z-index: 1;
}

.upload-item {
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #999;
  box-sizing: border-box;
  position: relative;
}

.upload-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  color: #999;
  font-weight: lighter;
  line-height: 1;
}

.remark-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.remark-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.input-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.name-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  background-color: #fff;
}

.bottom-note {
  width: 100%;
  padding: 20rpx;
  text-align: left;
  color: #999;
  font-size: 24rpx;
  line-height: 1.4;
}

.submit-btn {
  width: calc(100% - 40rpx);
  height: 88rpx;
  margin: 20rpx;
  background-color: #e4393c;
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  text-align: center;
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
}

.category-section {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.category-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.category-options {
  display: flex;
  gap: 20rpx;
}

.category-item {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #fff;
  transition: all 0.3s;
}

.category-item.active {
  background-color: #e4393c;
  color: #fff;
  border-color: #e4393c;
}
